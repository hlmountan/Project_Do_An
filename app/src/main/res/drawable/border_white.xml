<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/radius_big" />
            <stroke android:width="@dimen/line_size" android:color="@color/blue" />
            <solid android:color="@color/hint_gray_color"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/radius_big" />
            <stroke android:width="@dimen/line_size" android:color="@color/white" />
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
</selector>