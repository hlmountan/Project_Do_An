<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/img_avar"
        android:layout_width="@dimen/cate_ima_size"
        android:layout_height="@dimen/cate_ima_size" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/height_edit_text"
        android:layout_toRightOf="@id/img_avar"
        android:singleLine="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_short_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:text="20 MB - 2018/1/18"
        android:textColor="@color/gray_middle"
        android:textSize="@dimen/text_size_tiny" />

    <Button
        android:id="@+id/btn_uninstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_btn_gray"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="@dimen/padding_super_so_tiny"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:paddingTop="@dimen/padding_super_so_tiny"
        android:text="@string/uninstall"
        android:textAllCaps="false"
        android:textColor="@color/blue" />
</RelativeLayout>