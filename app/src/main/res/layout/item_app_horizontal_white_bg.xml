<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small">

    <ImageView
        android:id="@+id/img_avar"
        android:layout_width="@dimen/app_img_size_small"
        android:layout_height="@dimen/app_img_size_small"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@id/img_avar"
        android:layout_toLeftOf="@+id/btn_install_app"
        android:layout_marginRight="@dimen/margin_tiny"
        android:singleLine="true"
        android:text="Game Sale"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_install_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/install_btn_white"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="@dimen/padding_super_tiny"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:paddingTop="@dimen/padding_super_tiny"
        android:text="@string/watch"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size_tiny"
        android:clickable="false"/>

</RelativeLayout>